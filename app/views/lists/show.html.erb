<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1574894078563-01e879b89809?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2532&q=80);">
</div>
<div class="container">
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <div class="card-trip-img">
          <%= image_tag bookmark.movie.poster_url %>
        </div>
        <div class="card-trip-infos">
          <h2><%= bookmark.movie.title %> </h2>
        </div>
        <%#= bookmark.comment %>
        <%#= link_to 'Delete', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Delete bookmark?' }  %>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Home', lists_path  %>
<%= link_to 'Add bookmark', new_list_bookmark_path(@list) %>
